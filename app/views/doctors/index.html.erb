<div class="container">
<p class="flow-text">Physicians Dashboard</p>
<%= link_to content_tag('i', 'add', class: 'small material-icons'), new_doctor_path, data: {confirm:"Add a new physician?"} %>
<br/>
<br/>

<table class="highlight">
    <tr>
        <th>Physician's Name</th>
        <th>Department</th>
        <th>Joining Date</th>
    </tr>

    <% @doctors.each do |doctor| %>
        <tr>
            <td>Dr. <%= doctor.name %></td>
            <td><%= doctor.dep %></td>
            <td><%= doctor.created_at.strftime("%b, %d %Y") %></td>
            <td><a href="<%= doctor_path(doctor) %>"><i class="small material-icons">account_box</i></a></td>
            <td><a href="<%= edit_doctor_path(doctor) %>"><i class="small material-icons">edit</i></a></td>
            <td><%= link_to content_tag('i', 'clear', class: 'small material-icons'), doctor, data: {confirm: "Are you sure you want to delete Dr. '#{doctor.name}'?"}, method: :delete %></td>
        </tr>
    <% end %>
</table>
</div>