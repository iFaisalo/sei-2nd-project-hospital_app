<h1>All Physicians</h1>

<%= link_to "Add a New Physician", new_doctor_path, {:class => "button waves-effect waves-light btn"} %>

<br/>

<table>
    <tr>
        <th>Physician's Name</th>
        <th>Department</th>
        <th>Joining Date</th>
    </tr>

    <% @doctors.each do |doctor| %>
        <tr>
            <td>Dr. <%= link_to doctor.name, doctor_path(doctor) %></td>
            <td><%= doctor.dep %></td>
            <td><%= doctor.created_at.strftime("%b, %d %Y") %></td>
            <td><a class="btn-floating btn-large red" href="<%= edit_doctor_path(doctor) %>"><em class="large material-icons">Edit</em></a></td>
            <td><%= button_to "Delete", doctor_path(doctor.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
    <% end %>
</table>